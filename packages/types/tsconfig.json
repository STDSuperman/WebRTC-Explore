{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "newLine": "LF",
    "lib": [
      "dom",
      "scripthost",
      "esnext"
    ],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": false,
    "inlineSources": false,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "es",
    "lib"
  ]
}