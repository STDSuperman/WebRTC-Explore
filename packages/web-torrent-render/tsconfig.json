{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "webworker",
      "ES2015",
      "DOM"
    ],
    "moduleResolution": "Node",
    "module": "UMD",
    "target": "ES5",
    "outDir": "dist",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": ["src"]
}